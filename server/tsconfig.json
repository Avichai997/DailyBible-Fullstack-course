{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "types": ["node"],
    "rootDir": "./src",
    "sourceMap": true,
    "moduleResolution": "Node",
    "baseUrl": "./src",
    "paths": {
      "@public/*": ["./public/*"],
      "@Services/*": ["./Services/*"],
      "@Controllers/*": ["./Controllers/*"],
      "@Middlewares/*": ["./Middlewares/*"],
      "@Models/*": ["./Models/*"],
      "@Routes/*": ["./Routes/*"],
      "@Interfaces/*": ["./Interfaces/*"],
      "@Utils/*": ["./Utils/*"],
      "@Views/*": ["./Views/*"],
      "@Seed/*": ["./Seed/*"]
    },
    "allowJs": true,
    "checkJs": true,
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": [".", "../.eslintrc.cjs"],
  "exclude": ["node_modules", "build*/", "dist*/", "Seed/PostmanBackup", "ecosystem.config.js"]
}
