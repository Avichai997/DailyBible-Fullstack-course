{
  "compilerOptions": {
    "target": "ESNext",
    "types": ["node"],
    "rootDir": ".",
    "sourceMap": true,
    "moduleResolution": "Node",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./*"],
      "@public/*": ["public/*"],
      "@Services/*": ["src/Services/*"],
      "@Controllers/*": ["src/Controllers/*"],
      "@Middlewares/*": ["src/Middlewares/*"],
      "@Models/*": ["src/Models/*"],
      "@Routes/*": ["src/Routes/*"],
      "@Interfaces/*": ["src/Interfaces/*"],
      "@Utils/*": ["src/Utils/*"],
      "@Views/*": ["src/Views/*"],
      "@Seed/*": ["src/Seed/*"]
    },
    "allowJs": true,
    "checkJs": true,
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "skipLibCheck": true
  },
  "include": ["src", ".eslintrc.cjs"],
  "exclude": ["node_modules", "build*/", "dist*/", "Seed/Postman Backup"]
}
